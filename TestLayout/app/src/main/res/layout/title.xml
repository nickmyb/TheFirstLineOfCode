<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    xmlns:title="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/title_button1"
        android:layout_height="0dp"
        android:layout_width="0dp"
        title:layout_constraintWidth_percent="0.15"
        title:layout_constraintHeight_percent="0.1"
        title:layout_constraintTop_toTopOf="parent"
        title:layout_constraintBottom_toBottomOf="parent"
        title:layout_constraintLeft_toLeftOf="parent"
        title:layout_constraintVertical_bias="0"
        android:text="返回" />
        <!-- android:text里面不能写"<"-->

    <TextView
        android:layout_height="0dp"
        android:layout_width="0dp"
        title:layout_constraintWidth_percent="0.8"
        title:layout_constraintHeight_percent="0.1"
        title:layout_constraintTop_toTopOf="parent"
        title:layout_constraintBottom_toBottomOf="parent"
        title:layout_constraintLeft_toRightOf="@id/title_button1"
        title:layout_constraintVertical_bias="0"
        android:gravity="center"
        android:text="标题" />

    <Button
        android:id="@+id/title_button2"
        android:layout_height="0dp"
        android:layout_width="0dp"
        title:layout_constraintWidth_percent="0.15"
        title:layout_constraintHeight_percent="0.1"
        title:layout_constraintTop_toTopOf="parent"
        title:layout_constraintBottom_toBottomOf="parent"
        title:layout_constraintRight_toRightOf="parent"
        title:layout_constraintVertical_bias="0"
        android:text="编辑" />

</androidx.constraintlayout.widget.ConstraintLayout>